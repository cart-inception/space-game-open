{
  "name": "space-simulation-game",
  "version": "1.0.0",
  "description": "A Kerbal Space Program-like game built with TypeScript and Electron",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/main.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:all": "npm run build && electron-builder",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\""
  },
  "keywords": [
    "space",
    "simulation",
    "game",
    "electron",
    "typescript",
    "three.js"
  ],
  "author": "Space Game Developer",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/three": "^0.180.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "concurrently": "^9.2.1",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.9"
  },
  "dependencies": {
    "cannon-es": "^0.20.0",
    "three": "^0.180.0"
  }
}
